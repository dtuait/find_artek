{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash: Datatransfer",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/publications/datatransfer_script.sh",
            "args": [
                "--skip-data-transfer", 
                "true"
            ]
        },
        {
            "name": "Python: Datatransfer",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runscript",
                "publications.datatransfer_script"
            ],
            "django": true
        },
        {
            "name": "Python: Unittest",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "publications"
            ],
            "django": true
        },
        {
            "name": "Python: Runserver Live",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:80"
            ],
            "django": true,
            "justMyCode": true
        },

    ]
}