{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash: Datatransfer",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/app/management/datatransfer_script/datatransfer_script.sh",
            "args": [
                "--skip-data-transfer", 
                "false",
                "--use-sqlite",
                "true"
            ]
        },
        {
            "name": "Python: Datatransfer",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/manage.py",
            "args": [
                "runscript",
                "management.datatransfer_script.datatransfer_script"
            ],
            "django": true
        },
        {
            "name": "Python: FeatureData",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/manage.py",
            "args": [
                "runscript",
                "management.datatransfer_script.datatranser_feature_data"
            ],
            "django": true
        },
        {
            "name": "Python: Unittest",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/manage.py",
            "args": [
                "test",
                "publications"
            ],
            "django": true
        },
        {
            "name": "Python: Runserver Live",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000",
                "--settings",
                "find_artek.development_settings"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "ChromiumDev: Home",
            "runtimeExecutable": "C:\\Program Files\\chromium\\chrome-win\\chrome.exe",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}/app/publications",
            "disableNetworkCache": true
        },

    ]
}