{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Unittest",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "publications"
            ],
            "django": true
        },
        {
            "name": "Python: Runserver Live",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:80",
                "--noreload",
                "--settings",
                "myproject.settings",
                "--debug"
            ],
            "django": true,
            "justMyCode": true
        },

        {
            "name": "ChromiumDev: Home",
            "version": "stable",
            "runtimeExecutable": "C:\\Program Files\\chromium\\chrome-win\\chrome.exe",

            "request": "launch",
            "type": "msedge",
            "url": "http://localhost",
            "webRoot": "${workspaceFolder}/publications",
            "disableNetworkCache": true
        },
    ]
}