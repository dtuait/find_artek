{
    "name": "Find Artek Django Dev Container",
    "dockerComposeFile": "docker-compose.yml",
    "service": "webapp-find-artek-devcon",
    "workspaceFolder": "/usr/src/project",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/usr/src/venv/bin/python"
            },
            "extensions": [
                "ms-python.python",
                "rogalmic.bash-debug"
            ]
        }
    },
    
    "postCreateCommand": "bash /usr/src/project/.devcontainer/postCreateCommand.sh"
}
