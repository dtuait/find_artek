{
    "name": "Find Artek Django Dev Container",
    "dockerComposeFile": "docker-compose.yaml",
    "service": "find-artek-app",
    "workspaceFolder": "/usr/src/find_artek",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/usr/src/app/venv/bin/python"
            },
            "extensions": [
                "ms-python.python",
                "rogalmic.bash-debug"
            ]
        }
    },
    "postCreateCommand": "bash .devcontainer/postCreateCommand.sh"
}
