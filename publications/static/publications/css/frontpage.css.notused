div.searchbox{
	display: block;
	text-align: left;
	width: 180px;
	height: 190px;
	border: 1px solid #B0C4DE;
	background-color: #B0C4DE;
	padding: 5px;
	margin:  0px;
}

div.searchbox #q{
	display: block;
	width: 170px;
}

div.searchbox label{
	font-family: Verdana, Geneva, sans-serif;
	font-size:   1.3em;
	font-weight: bold;
#	border: 1px solid black;
	text-align: left;
}

div.searchbox p{
	display: block-inline;
	text-align: left;
}

