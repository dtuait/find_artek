
div.contents {
	padding: 0px 20px 0px 20px;    /* top, right, bottom, left */
}

div.fmitem {
	float: left;
	padding: 20px 00px 20px 20px;    /* top, right, bottom, left */
	margin: 0px 20px 0px 0px;       /* top, right, bottom, left */
/* #	border: 1px solid red; */
}

div.fmitem a:link{
	text-decoration: None;
	color: inherit;
}
div.fmitem a:visited{
	text-decoration: None;
	color: inherit;
}
div.fmitem a:hover{
	text-decoration: None;
	color: grey;
}

div.fmimage {
	float:  center;
	width:  190px;
	height: 150px;
	overflow:hidden;
	border: 1px solid #B0C4DE;
	text-align: center;
}

div.fmimage img{
/* #	width:  150%; */
/* #	height: 100%; */
}

div.fmtext {
	float:  center;
	width:  180px;
	height: 40px;
/* #	border: 1px solid #9cd6ff; */
	border: 1px solid #B0C4DE;
	padding: 5px;
	margin:  0px;
	overflow:hidden;
/* #	background-color: #9cd6ff; */
	background-color: #B0C4DE;
}

div.fmtext span.topic{
	font-family: Verdana, Geneva, sans-serif;
	font-size:   1.5em;
	font-weight: bold;
	padding: 0px;
	margin: 0px;
/* #	border: 1px solid black; */
	text-align: left;
}

div.fmtext span.text{
	font-family: Verdana, Geneva, sans-serif;
	font-size:   1em;
	padding: 4px;
	text-align: center;
}


